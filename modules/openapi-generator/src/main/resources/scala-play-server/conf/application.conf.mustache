play {
  filters.headers.contentSecurityPolicy = null
  modules.enabled += "{{basePackage}}.Module"

  http {
    secret.key = "changeme"
    errorHandler = "{{basePackage}}.ErrorHandler"
  }

  assets {
    path = "/public"
    urlPrefix = "/assets"
  }
}
