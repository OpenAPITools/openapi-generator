        /// <param name="builder"></param>
        /// <param name="options"></param>
        public static IHostBuilder Configure{{apiName}}(this IHostBuilder builder, Action<HostBuilderContext, HostConfiguration<{{>DefaultApis}}>> options)
            => Configure{{apiName}}<{{>DefaultApis}}>(builder, options);
    }
}
