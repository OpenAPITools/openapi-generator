# ref: https://docs.travis-ci.com/user/languages/python
language: python
python:
  - "3.5"
  - "3.6"
  - "3.7"
  - "3.8"
# command to install dependencies
install:
  - "pip install -r requirements.txt"
  - "pip install -r test-requirements.txt"
# command to run tests
{{#if useNose}}
script: nosetests
{{/if}}
{{#unless useNose}}
script: pytest --cov={{{packageName}}}
{{/unless}}
