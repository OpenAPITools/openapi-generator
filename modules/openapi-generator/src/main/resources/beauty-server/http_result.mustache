/*
 * http_result.hpp
 *
 * HTTP result and status codes for Beauty server
 */

#ifndef BEAUTY_HTTP_RESULT_HPP_
#define BEAUTY_HTTP_RESULT_HPP_

#include <string>

namespace beauty {
namespace http {

enum class Status {
    OK = 200,
    CREATED = 201,
    ACCEPTED = 202,
    NO_CONTENT = 204,
    BAD_REQUEST = 400,
    UNAUTHORIZED = 401,
    FORBIDDEN = 403,
    NOT_FOUND = 404,
    METHOD_NOT_ALLOWED = 405,
    CONFLICT = 409,
    UNPROCESSABLE_ENTITY = 422,
    INTERNAL_SERVER_ERROR = 500,
    NOT_IMPLEMENTED = 501,
    BAD_GATEWAY = 502,
    SERVICE_UNAVAILABLE = 503
};

std::string status_to_string(Status status);
int status_to_int(Status status);

} // namespace http
} // namespace beauty

#endif // BEAUTY_HTTP_RESULT_HPP_
