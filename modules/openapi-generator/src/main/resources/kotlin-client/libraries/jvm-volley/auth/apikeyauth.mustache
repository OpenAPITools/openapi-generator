package {{packageName}}.auth

import kotlin.collections.MutableMap
import kotlin.collections.MutableList

class ApiKeyAuth(private val location: String, val paramName: String) : Authentication {
    var apiKey: String? = null
    var apiKeyPrefix: String? = null

    override fun applyToParams(queryParams: MutableMap<String, String>, headerParams: MutableMap<String, String>) {
        if (apiKey == null) {
            return
        }
        val value: String = if (apiKeyPrefix != null) {
            "$apiKeyPrefix $apiKey"
        } else {
            apiKey!!
        }
        if ("query" == location) {
            queryParams[paramName] = value
        } else if ("header" == location) {
            headerParams[paramName] = value
        }
    }
}