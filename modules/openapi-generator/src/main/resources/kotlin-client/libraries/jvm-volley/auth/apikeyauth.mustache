package {{packageName}}.auth

import java.util.List

class ApiKeyAuth(private val location: String, val paramName: String) : Authentication {
    val apiKey: String? = null
    var apiKeyPrefix: String? = null



    override fun applyToParams(queryParams: List<kotlin.Pair<String, String>>, headerParams: MutableMap<String, String>) {
        if (apiKey == null) {
            return
        }
        val value: String = if (apiKeyPrefix != null) {
            "$apiKeyPrefix $apiKey"
        } else {
            apiKey
        }
        if ("query" == location) {
            queryParams.add(paramName to value)
        } else if ("header" == location) {
            headerParams[paramName] = value
        }
    }
}