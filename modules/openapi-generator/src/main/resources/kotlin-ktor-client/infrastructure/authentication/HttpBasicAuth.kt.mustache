package {{packageName}}.infrastructure.authentication

{{#nonPublicApi}}internal {{/nonPublicApi}}class HttpBasicAuth(
    private val username: String,
    private val password: String
): AuthProvider {

    override fun applyToParams(queryParameters: MutableList<Pair<String, Any?>>, headerParameters: MutableList<Pair<String, Any?>>) {
        val authString = "$username:$password"
        val authBuf = authString.encodeBase64()

        headerParameters += "Authorization" to "Basic $authBuf"
    }
}